<h1>
  プロフィール画面
  <%= gravatar_for @user %>
</h1>


<div class="col-md-6 col-md-offset-3">
<ul class="list-group">
  <li class="list-group-item">名前:<%= @user.name %></li>
  <li class="list-group-item">地域:<%= @user.region %></li>
  <li class="list-group-item">プロフィール:<%= @user.profile %></li>
</ul>
</div>


<% unless current_user == @user ##フォローボタンは、自分の時はださない %>

<div class="row">
  <!-- <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  -->
  <div class="col-md-1">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
    
  </div>
</div>

<% end %>
<div class="col-md-6 col-md-offset-3">
<%= link_to("フォロー",{ :action =>'followings'}, :class => 'btn btn-primary') %>
<%= link_to("フォロワー",{ :action =>'followers'}, :class => 'btn btn-primary') %>
</div>

