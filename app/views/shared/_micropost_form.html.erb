<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "呟いてください" %>
    
    <% if @micropost.image? %>
      <div class="thumbnail">
        <%= image_tag @micropost.image.url %>
      </div>
    <% end %><br>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  
  
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>